{
  "name": "webpack-monkey",
  "version": "0.1.2",
  "description": "Webpack plugin for developing userscripts with a modern workflow.",
  "scripts": {
    "setup": "node scripts/setup.js",
    "playground": "webpack serve --config=playground/webpack.config.ts",
    "playground:build": "webpack --config=playground/webpack.config.ts",
    "clean": "rimraf -g ./dist/*",
    "build": "npm run clean && tsc -p tsconfig.build.json && ts-node scripts/postbuild.ts && npm run check-deps",
    "check-deps": "dependency-check ./dist/lib/**/*.js ./dist/lib/**/*.d.ts --no-dev",
    "pack": "cd dist && npm pack",
    "prepublishOnly": "npm run check-deps",
    "update-example": "npm run pack && cd .. && npm install dist/webpack-monkey-0.1.0.tgz -w @example/hello-world",
    "test": "jest --runInBand",
    "test:u": "npm run test -- --updateSnapshot",
    "test:h": "cross-env HEADLESS=false npm run test"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guansss/webpack-monkey.git"
  },
  "author": "Guan",
  "license": "MIT",
  "homepage": "https://github.com/guansss/webpack-monkey#readme",
  "peerDependencies": {
    "colorette": "^2.0.0",
    "terser-webpack-plugin": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "colorette": {
      "optional": true
    },
    "terser-webpack-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "browser-extension-url-match": "^0.3.3",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "webpack-merge": "^5.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jest-environment-puppeteer": "^5.0.3",
    "@types/lodash": "^4.14.197",
    "axios": "^1.4.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "dependency-check": "^5.0.0-7",
    "dotenv": "^16.0.3",
    "glob": "^10.2.4",
    "jest": "^29.5.0",
    "jest-extended": "^4.0.0",
    "jest-puppeteer": "^9.0.0",
    "jszip": "^3.10.1",
    "mini-css-extract-plugin": "^2.7.5",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^8.3.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "type-fest": "^3.11.1",
    "typescript": "^5.0.4",
    "webpack-cli": "^5.1.1"
  },
  "workspaces": [
    "examples/*"
  ]
}
